@model BalanceHistoryByCardNumberDto
@{
    Layout = null;
    ViewData["Title"] = "History";
}

<div class="modal-header">
    <h5 class="modal-title" id="createBankAccount">@ViewData["Title"]</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    @if (Model != null)
    {
        @if (Model.Histories.Count == 0)
        {
            <div class="form-group">
                <div class="row">
                    <div class="col-12 col-md-12 col-sm-12">
                        <div class="card">
                            <div class="card-body d-flex flex-column overflow-auto">
                                <p class="card-text">
                                    No History.
                                </p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        }
        else
        {
            @foreach (var item in Model.Histories)
            {

                <div class="form-group">
                    <div class="row">
                        <div class="col-12 col-md-12 col-sm-12">
                            <div class="card">
                                <div class="card-body d-flex flex-column overflow-auto">
                                    <h5 class="card-title">
                                        <small class="text-muted">Transaction Date: @item.TransactionDate.ToString("dd-MMM-yyyy") </small>
                                    </h5>
                                    <p class="card-text">
                                        <span> @(item.HistoryType == (int)EBalanceHistoryType.Withdraw ? "Withdraw" : "Deposit")</span>
                                        @if (item.HistoryType == (int)EBalanceHistoryType.Withdraw)
                                        {
                                            <span class="text-right" style="color: red;">@item.Amount.ToString("#,#00.00")</span>
                                        }
                                        else
                                        {
                                            <span class="text-right" style="color: green;">@item.Amount.ToString("#,#00.00")</span>

                                        }
                                    </p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            }
        }
    }
    else
    {
        if (Model.Histories.Count == 0)
        {
            <div class="form-group">
                <div class="row">
                    <div class="col-12 col-md-12 col-sm-12">
                        <div class="card">
                            <div class="card-body d-flex flex-column overflow-auto">
                                <p class="card-text">
                                    No History.
                                </p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        }
    }

    <div class="form-group">
        <div class="row">
            <div class="col-12 col-md-12 col-sm-12 text-right">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>