@model CheckBankCardDto
@{
    ViewData["Title"] = "Card Log in";
    Layout = null;
    string statusMessage = (TempData[StatusMessage.ActionStatusMessage] ?? string.Empty) as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ATM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="vh-100 d-flex justify-content-center align-items-center">
        <div class="container">
            @if (!string.IsNullOrEmpty(statusMessage))
            {
                <div class="row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        @await Html.PartialAsync(StatusMessage.ActionMessagePartial, statusMessage)
                    </div>
                    <div class="col-sm-2"></div>
                </div>
            }
            <div class="row">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-8">
                    <div class="card">
                        <div class="row no-gutters">
                            <div class="col-md-12">
                                <div class="card-body">
                                    <h2 class="card-title">@ViewData["Title"]</h2>
                                    <section>
                                        <form asp-action="SubmitCard" asp-asp-controller="Home" method="post">
                                            <hr />
                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-4 col-md-4 col-sm-12">
                                                        <label asp-for="BankCardNumber"></label>
                                                    </div>
                                                    <div class="col-8 col-md-8 col-sm-12">
                                                        <input asp-for="BankCardNumber" class="form-control" />
                                                        <span asp-validation-for="BankCardNumber" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-4 col-md-4 col-sm-12">
                                                        <label asp-for="PIN"></label>
                                                    </div>
                                                    <div class="col-8 col-md-8 col-sm-12">
                                                        <input asp-for="PIN" class="form-control" />
                                                        <span asp-validation-for="PIN" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <button type="submit" class="btn btn-primary">Card Log in</button>
                                            </div>
                                        </form>
                                    </section>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-2">
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}