@model CreateATMLocationViewModel

<h4>Add ATM Location</h4>
<hr />
<form id="atmLocationForm">   
    <div class="row mb-3">
        <label asp-for="BankNameId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="BankNameId" asp-items="@Model.BankNames" class="form-control select2">
                <option value=""></option>
            </select>
            <span asp-validation-for="BankNameId" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="BankBranchNameId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="BankBranchNameId" class="form-control select2">
                <option value=""></option>
            </select>
            <span asp-validation-for="BankBranchNameId" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="RegionId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="RegionId" asp-items="@Model.RegionNames" class="form-control select2">
                <option value=""></option>
            </select>
            <span asp-validation-for="RegionId" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="DivisionId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="DivisionId" class="form-control select2">
                <option value=""></option>
            </select>
            <span asp-validation-for="DivisionId" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="TownshipId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="TownshipId" class="form-control select2">
                <option value=""></option>
            </select>
            <span asp-validation-for="TownshipId" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Address" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Address" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Status" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Status" asp-items="@Model.StatusNames" class="form-control select2">
                <option value=""></option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>
    <button type="button" class="btn btn-primary saveBtn">Save</button>
</form>

@section Scripts {
    <script src="~/scripts/atmlocation/createatmlocation.js" asp-append-version="true"></script>
}