@model string

@if (!string.IsNullOrEmpty(Model))
{
    <div class="alert @(Model.StartsWith("Error") ? "alert-danger" : "alert-success") alert-dismissible fade show" role="alert">
        @Model
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}